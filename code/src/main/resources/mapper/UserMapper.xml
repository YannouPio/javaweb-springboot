<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="fit.iseeyou.login10.mapper.UserMapper">
    <resultMap id="UserDomainResultMap" type="fit.iseeyou.login10.domain.UserDomain">
        <id column="user_id" property="userId"/>
        <result column="user_name" property="userName"/>
        <result column="user_phone" property="userPhone"/>
        <result column="user_card" property="userCard"/>
        <result column="login_pwd" property="userPwd"/>
        <result column="login_code" property="userStatus"/>
        <result column="user_type" property="userType"/>
    </resultMap>

    <!--List<UserDomain> getList(UserDomain userDomain); -->
    <select id="getList" parameterType="fit.iseeyou.login10.domain.UserDomain" resultMap="UserDomainResultMap">
        select * from tb_user
    </select>

    <!--  UserDomain getUser(@Param("id") Integer id);  -->
    <select id="getUser" resultMap="UserDomainResultMap" parameterType="int">
        select * from tb_user where user_id = #{id}
    </select>

    <!--UserDomain getUserByUsername(@Param("username") String username);-->
    <select id="getUserByUsername" parameterType="string" resultMap="UserDomainResultMap">
        select * from tb_user where user_name = #{username}
    </select>
</mapper>